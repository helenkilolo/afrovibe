<!DOCTYPE html>
<html lang="en" data-theme="cupcake">
<%- include('partials/head.ejs', { pageTitle: post.title }) %>
<body data-theme="cupcake" class="bg-base-100 min-h-screen flex flex-col font-sans">
  <!-- Navbar -->
  <%- include('partials/navbar.ejs') %>

  <!-- Main content -->
  <main class="flex-grow container mx-auto p-4 md:p-8">
    <div class="max-w-3xl mx-auto">
      <!-- Post Content -->
      <div class="card bg-base-200 shadow-xl p-6 mb-8 rounded-box">
        <h1 class="text-3xl md:text-4xl font-bold mb-2 text-gray-800"><%= post.title %></h1>
        <div class="text-sm text-gray-400 mb-6">
          Posted by <span class="font-semibold text-primary"><%= post.author.username %></span> on <%= post.createdAt.toDateString() %>
        </div>
        <div class="prose max-w-none text-gray-700">
          <p><%= post.content %></p>
        </div>
      </div>

      <!-- Comments Section -->
      <div class="bg-base-100 p-6 rounded-box shadow-lg">
        <h2 class="text-2xl font-semibold mb-4 text-gray-800">Comments (<%= post.comments.length %>)</h2>
        
        <!-- Comment List -->
        <div class="space-y-4 mb-6">
          <% if (post.comments.length > 0) { %>
            <% post.comments.forEach(comment => { %>
              <div class="bg-base-200 p-4 rounded-lg">
                <div class="flex items-center mb-2">
                  <span class="font-bold text-gray-800 mr-2"><%= comment.author.username %></span>
                  <span class="text-xs text-gray-500"><%= comment.createdAt.toDateString() %></span>
                </div>
                <p class="text-gray-700"><%= comment.content %></p>
              </div>
            <% }) %>
          <% } else { %>
            <div class="text-center text-gray-500 p-4 border rounded-lg">
              <p>No comments yet. Be the first to reply!</p>
            </div>
          <% } %>
        </div>

        <!-- Comment Form -->
        <div class="mt-8">
          <h3 class="text-xl font-semibold mb-4">Leave a Comment</h3>
          <form action="/community/post/<%= post._id %>/comment" method="POST">
            <div class="form-control mb-4">
              <label class="label"><span class="label-text">Your Comment</span></label>
              <textarea name="content" class="textarea textarea-bordered h-24 w-full" required></textarea>
            </div>
            <div class="form-control">
              <button type="submit" class="btn btn-primary w-full">Submit Comment</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </main>

  <!-- Footer -->
  <%- include('partials/footer.ejs') %>
  <script src="/js/socket.io.js"></script>
</body>
</html>
