<!DOCTYPE html>
<html lang="en" data-theme="afro">
<head>
  <%- include('partials/head.ejs', { pageTitle: 'Chat' }) %>
</head>
<body class="bg-base-100 min-h-screen"
      data-peer-id="<%= (peer && peer._id) ? String(peer._id) : (otherUser && otherUser._id) ? String(otherUser._id) : '' %>">
  <%- include('partials/navbar.ejs', { currentUser, unreadMessages, unreadNotificationCount }) %>

  <!-- Hidden IDs for JS (force strings) -->
  <input type="hidden" id="currentUserId"  value="<%= currentUser && currentUser._id ? String(currentUser._id) : '' %>">
  <input type="hidden" id="otherUserId"   value="<%=
    (peer && peer._id) ? String(peer._id) :
    (otherUser && otherUser._id) ? String(otherUser._id) : ''
  %>">
  <input type="hidden" id="otherUsername" value="<%=
    (peer && peer.username) ? peer.username :
    (otherUser && otherUser.username) ? otherUser.username : ''
  %>">

  <main class="max-w-4xl mx-auto p-4">
    <!-- Header -->
    <div class="card bg-base-100 border shadow mb-3">
      <div class="flex items-center justify-between px-4 py-3">
        <div class="flex items-center gap-3">
          <!-- Hard-sized avatar wrapper so it cannot blow up -->
          <div style="width:48px;height:48px" class="rounded-full overflow-hidden ring ring-base-300 ring-offset-2">
            <img
              src="<%= (peer && peer.profile && peer.profile.photos && peer.profile.photos[0]) ? peer.profile.photos[0] : '/images/default-avatar.png' %>"
              alt="avatar"
              class="w-full h-full object-cover select-none"
              draggable="false">
          </div>

          <div>
            <div class="font-semibold text-base leading-tight">
              <%= (peer && peer.username) ? peer.username : (otherUser && otherUser.username ? otherUser.username : 'User') %>
            </div>
            <div id="typingDot" class="text-xs opacity-60 leading-tight">&nbsp;</div>
          </div>
        </div>

        <div class="flex items-center gap-2">
          <!-- Video chat -->
          <button
            class="btn btn-sm btn-ghost video-call-btn"
            data-peer-id="<%= (peer && peer._id) ? String(peer._id) : (otherUser && otherUser._id) ? String(otherUser._id) : '' %>"
            title="Video chat">
            ðŸ“¹ Video chat
          </button>
        </div>
      </div>
    </div>

    <!-- Bulk toolbar -->
    <div id="bulkBar" class="hidden mb-2 flex items-center justify-between">
      <div class="text-sm">Selected: <span id="selCount">0</span></div>
      <div class="flex items-center gap-2">
        <button id="deleteSelected" class="btn btn-error btn-xs">Delete</button>
        <button id="deleteAll" class="btn btn-ghost btn-xs">Clear chat</button>
        <button id="cancelSelect" class="btn btn-ghost btn-xs">Cancel</button>
      </div>
    </div>

    <!-- Messages -->
    <%
      const _msgs = (typeof messages !== 'undefined' && messages)
                 || (typeof initialHistory !== 'undefined' && initialHistory)
                 || [];
    %>
    <div id="chatScroll" class="card bg-base-100 border shadow p-3 space-y-2 max-h-[75vh] overflow-y-auto">
      <% _msgs.forEach(function(m){ const mine = String(m.sender) === String(currentUser._id); %>
        <div class="flex <%= mine ? 'justify-end' : 'justify-start' %>">
          <div class="max-w-[80%] rounded-2xl px-3 py-2 <%= mine ? 'bg-primary text-white' : 'bg-gray-100' %>"
               data-id="<%= m._id %>"
               data-ts="<%= new Date(m.createdAt || Date.now()).getTime() %>">
            <input type="checkbox" class="checkbox checkbox-xs chk hidden mr-2">
            <div class="whitespace-pre-wrap break-words text-sm"><%= m.content %></div>
            <div class="text-[10px] opacity-70 mt-1">
              <%= new Date(m.createdAt || Date.now()).toLocaleString() %>
              <%= mine ? '<span class="delivery">âœ“</span>' : '' %>
            </div>
          </div>
        </div>
      <% }); %>
    </div>

    <!-- Composer -->
    <% if (typeof isMatched === 'undefined' || isMatched) { %>
      <form id="chatForm" class="mt-3 flex gap-2" action="/api/messages" method="post" onsubmit="return false;">
        <input id="chatInput" name="content" class="input input-bordered w-full" placeholder="Type a messageâ€¦">
        <button class="btn btn-primary">Send</button>
      </form>
    <% } else { %>
      <div class="alert mt-3">
        <div>
          <span class="font-medium">You canâ€™t message yet.</span>
          <span class="opacity-70 text-sm">Send a like or wait for a match to unlock messaging.</span>
        </div>
        <a class="btn btn-sm btn-primary ml-auto" href="/upgrade?reason=chat">Upgrade</a>
      </div>
    <% } %>

    <!-- Safety actions -->
    <div class="mt-2 flex gap-2">
      <button id="blockUser"  class="btn btn-outline btn-xs">Block</button>
      <button id="reportUser" class="btn btn-outline btn-xs">Report</button>
    </div>
  </main>

  <!-- RTC modal -->
  <dialog id="rtc-modal" class="modal">
    <div class="modal-box p-0 max-w-4xl">
      <div class="flex items-center justify-between px-4 py-3 border-b bg-base-100">
        <div class="flex items-center gap-2">
          <span class="font-semibold">Video chat</span>
          <span id="rtc-status" class="text-xs opacity-70">Connectingâ€¦</span>
        </div>
        <div class="flex gap-2">
          <button class="btn btn-outline btn-xs rtc-mute"  type="button">Mute</button>
          <button class="btn btn-outline btn-xs rtc-video" type="button">Video</button>
          <button class="btn btn-error   btn-xs rtc-hangup" type="button">End</button>
        </div>
      </div>

      <div class="grid md:grid-cols-[1fr_auto] gap-2 p-3 bg-base-200">
        <video id="rtc-remote" playsinline autoplay class="w-full aspect-video rounded bg-black"></video>
        <video id="rtc-local"  playsinline autoplay muted class="w-40 h-28 md:w-48 md:h-36 rounded bg-black self-end shadow"></video>
      </div>

      <div id="rtc-incoming" class="p-4 hidden">
        <div class="card bg-base-100 border">
          <div class="card-body p-4 flex items-center justify-between">
            <div>
              <div class="font-semibold">Incoming call</div>
              <div class="text-xs opacity-70" id="rtc-from-label"></div>
            </div>
            <div class="flex gap-2">
              <button class="btn btn-success btn-sm rtc-accept" type="button">Accept</button>
              <button class="btn btn-ghost   btn-sm rtc-decline" type="button">Decline</button>
            </div>
          </div>
        </div>
      </div>
    </div>
    <form method="dialog" class="modal-backdrop"><button>close</button></form>
  </dialog>

 <script nonce="<%= cspNonce %>" src="/socket.io/socket.io.js" defer></script>
<script nonce="<%= cspNonce %>" src="/js/page-chat.js" defer></script>

  <%- include('partials/footer.ejs') %>
</body>
</html>
