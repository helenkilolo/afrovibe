<!DOCTYPE html>
<html lang="en" data-theme="afro">
<head>
  <%- include('partials/head.ejs', { pageTitle: 'Chat' }) %>
</head>
<body class="bg-base-100 min-h-screen">
  <%- include('partials/navbar.ejs', { currentUser, unreadMessages, unreadNotificationCount }) %>

  <!-- Hidden IDs for JS -->
  <input type="hidden" id="currentUserId" value="<%= currentUser?._id %>">
  <input type="hidden" id="otherUserId"  value="<%= peer?._id %>">
  <input type="hidden" id="otherUsername" value="<%= peer?.username %>">

  <main class="max-w-4xl mx-auto p-4">
    <div class="card bg-base-100 border shadow mb-3">
      <div class="flex items-center justify-between px-4 py-3">
        <div class="flex items-center gap-3">
          <div class="avatar">
            <div class="w-10 rounded-full">
              <img src="<%= (peer.profile?.photos?.[0] || '/img/placeholder-avatar.png') %>" alt="">
            </div>
          </div>
          <div>
            <div class="font-semibold"><%= peer.username %></div>
            <div id="typingDot" class="text-xs opacity-70"> </div>
          </div>
        </div>

        <div class="flex items-center gap-2">
          <!-- Video chat button -->
          <button
            class="btn btn-sm btn-ghost video-call-btn"
            data-peer-id="<%= peer._id %>"
            title="Video chat (Elite)">
            ðŸ“¹ Video chat
          </button>
        </div>
      </div>
    </div>

    <!-- Bulk toolbar -->
    <div id="bulkBar" class="hidden mb-2 flex items-center justify-between">
      <div class="text-sm">Selected: <span id="selCount">0</span></div>
      <div class="flex items-center gap-2">
        <button id="deleteSelected" class="btn btn-error btn-xs">Delete</button>
        <button id="deleteAll" class="btn btn-ghost btn-xs">Clear chat</button>
        <button id="cancelSelect" class="btn btn-ghost btn-xs">Cancel</button>
      </div>
    </div>

    <div id="chatScroll" class="card bg-base-100 border shadow p-3 space-y-2 max-h-[75vh] overflow-y-auto">
      <% (initialHistory || []).forEach(m => { const mine = String(m.sender) === String(currentUser._id); %>
        <div class="flex <%= mine ? 'justify-end' : 'justify-start' %>">
          <div class="max-w-[80%] rounded-2xl px-3 py-2 <%= mine ? 'bg-primary text-white' : 'bg-gray-100' %>" data-id="<%= m._id %>">
            <input type="checkbox" class="checkbox checkbox-xs chk hidden mr-2">
            <div class="whitespace-pre-wrap break-words text-sm"><%= m.content %></div>
            <div class="text-[10px] opacity-70 mt-1"><%= new Date(m.createdAt).toLocaleString() %> <%= mine ? '<span class="delivery">âœ“</span>' : '' %></div>
          </div>
        </div>
      <% }) %>
    </div>

    <form id="chatForm" class="mt-3 flex gap-2" action="/api/messages" method="post" onsubmit="return false;">
      <input id="chatInput" name="content" class="input input-bordered w-full" placeholder="Type a messageâ€¦">
      <button class="btn btn-primary">Send</button>
    </form>
    <div class="mt-2 flex gap-2">
      <button id="blockUser" class="btn btn-outline btn-xs">Block</button>
      <button id="reportUser" class="btn btn-outline btn-xs">Report</button>
    </div>
  </main>

  <!-- RTC modal -->
  <dialog id="rtc-modal" class="modal">
    <div class="modal-box p-0">
      <div class="flex items-center justify-between px-4 py-3 border-b">
        <div class="font-semibold">Video chat</div>
        <button class="btn btn-ghost btn-xs rtc-hangup">Hang up</button>
      </div>
      <div class="grid grid-cols-1 gap-2 p-3">
        <video id="rtc-remote" playsinline autoplay class="w-full rounded bg-base-200"></video>
        <video id="rtc-local"  playsinline autoplay muted class="w-40 h-28 rounded bg-base-200 self-end"></video>
      </div>
      <div class="px-4 pb-4 flex gap-2 justify-end">
        <button class="btn btn-outline btn-sm rtc-mute">Mute</button>
        <button class="btn btn-outline btn-sm rtc-video">Video</button>
        <button class="btn btn-error btn-sm rtc-hangup">End</button>
      </div>
    </div>
    <form method="dialog" class="modal-backdrop"><button>close</button></form>
  </dialog>

  <script src="/socket.io/socket.io.js" defer></script>
  <script src="/js/page-chat.js" defer></script>
</body>
</html>
