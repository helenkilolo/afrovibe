<!DOCTYPE html>
<html lang="en" data-theme="cupcake">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Password Settings - AfroVibe</title>
  <link href="/css/output.css" rel="stylesheet">
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdn.jsdelivr.net/npm/daisyui@4.12.10/dist/full.min.css" rel="stylesheet">
  <script src="/js/socket.io.js"></script>
</head>
<body data-theme="cupcake" class="bg-base-100 min-h-screen flex flex-col">
  <!-- Navbar -->
  <div class="navbar bg-gradient-to-r from-[#FF6B6B] to-[#FECA57] shadow-lg">
    <div class="navbar-start">
      <a href="/dashboard" class="btn btn-ghost text-xl text-white">üåç AfroVibe</a>
    </div>
    <div class="navbar-center hidden lg:flex">
      <ul class="menu menu-horizontal px-1">
        <li><a href="/dashboard" class="text-white">Home</a></li>
        <li><a href="/messages" class="text-white">Messages <% if (typeof unreadMessages !== 'undefined' && unreadMessages > 0) { %><span class="badge badge-error badge-sm"><%= unreadMessages %></span><% } %></a></li>
        <li><a href="/matches" class="text-white">Matches</a></li>
        <li><a href="/advanced-search" class="text-white">Advanced Search</a></li>
      </ul>
    </div>
    <div class="navbar-end">
      <div class="dropdown dropdown-end">
        <label tabindex="0" class="btn btn-ghost btn-circle avatar">
          <div class="w-10 rounded-full">
            <% if (currentUser.profile && currentUser.profile.photos && Array.isArray(currentUser.profile.photos) && currentUser.profile.photos.length > 0) { %>
              <img src="<%= currentUser.profile.photos[0] %>" alt="Profile" class="w-full h-10 object-cover" onerror="this.src='/images/default-avatar.png';">
            <% } else { %>
              <img src="/images/default-avatar.png" alt="No Photo" class="w-full h-10 object-cover">
            <% } %>
          </div>
        </label>
        <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52">
          <li><a href="/my-profile">Profile</a></li>
          <li><a href="/edit-profile">Edit Profile</a></li>
          <li><a href="/photos">Manage Photos</a></li>
          <li><a href="/settings">Settings</a></li>
          <li><a href="/logout">Logout</a></li>
        </ul>
      </div>
      <div class="ml-4">
        <a href="/notifications" class="btn btn-ghost btn-circle">
          <div class="indicator">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6 6 0 00-12 0v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
            </svg>
            <% if (unreadNotificationCount > 0) { %>
              <span class="badge badge-xs badge-error indicator-item"><%= unreadNotificationCount %></span>
            <% } %>
          </div>
        </a>
      </div>
    </div>
    <div class="navbar-end lg:hidden">
      <div class="dropdown dropdown-end">
        <label tabindex="0" class="btn btn-ghost btn-circle">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
          </svg>
        </label>
        <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52">
          <li><a href="/dashboard">Home</a></li>
          <li><a href="/messages">Messages <% if (typeof unreadMessages !== 'undefined' && unreadMessages > 0) { %><span class="badge badge-error badge-sm"><%= unreadMessages %></span><% } %></a></li>
          <li><a href="/matches">Matches</a></li>
          <li><a href="/advanced-search">Advanced Search</a></li>
          <li><a href="/my-profile">Profile</a></li>
          <li><a href="/edit-profile">Edit Profile</a></li>
          <li><a href="/photos">Manage Photos</a></li>
          <li><a href="/settings">Settings</a></li>
          <li><a href="/logout">Logout</a></li>
        </ul>
      </div>
    </div>
  </div>

  <div class="container mx-auto p-6 flex-grow">
    <h1 class="text-4xl font-extrabold text-primary text-center mb-8">Password Settings</h1>
    <p class="text-center text-gray-600 mb-6">Change your password here to keep your account secure.</p>

    <!-- Form -->
    <div class="max-w-md mx-auto bg-base-200 p-8 rounded-2xl shadow-xl">
      <form id="passwordForm" action="/update-password" method="POST" class="space-y-6">
        <div class="form-control">
          <label class="label">
            <span class="label-text text-lg">Current Password</span>
          </label>
          <input type="password" name="currentPassword" placeholder="Enter current password" class="input input-bordered w-full" required>
        </div>
        <div class="form-control">
          <label class="label">
            <span class="label-text text-lg">New Password</span>
          </label>
          <input type="password" name="newPassword" placeholder="Enter new password" class="input input-bordered w-full" required>
        </div>
        <div class="form-control">
          <label class="label">
            <span class="label-text text-lg">Confirm New Password</span>
          </label>
          <input type="password" name="confirmPassword" placeholder="Confirm new password" class="input input-bordered w-full" required>
        </div>
        <button type="submit" class="btn btn-primary w-full text-white">Update Password</button>
      </form>
    </div>

    <!-- Error Modal -->
    <dialog id="errorModal" class="modal">
      <div class="modal-box">
        <h3 class="font-bold text-lg text-error">Error!</h3>
        <p class="py-4" id="errorMessage"></p>
        <div class="modal-action">
          <button class="btn btn-ghost" onclick="closeModal('errorModal')">OK</button>
        </div>
      </div>
    </dialog>

    <!-- Success Modal -->
    <dialog id="successModal" class="modal">
      <div class="modal-box">
        <h3 class="font-bold text-lg text-success">Success!</h3>
        <p class="py-4" id="successMessage"></p>
        <div class="modal-action">
          <button class="btn btn-ghost" onclick="closeModal('successModal')">OK</button>
        </div>
      </div>
    </dialog>
  </div>

  <footer class="footer footer-center p-4 bg-base-300 text-base-content mt-auto">
    <div>
      <p>&copy; 2025 AfroVibe Dating. All rights reserved.</p>
    </div>
  </footer>

  <script>
    // Form submission handler
    document.getElementById('passwordForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      const formData = new FormData(e.target);
      try {
        const response = await fetch('/update-password', {
          method: 'POST',
          body: new URLSearchParams(formData).toString(),
          headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
        });
        const result = await response.json();
        if (result.success) {
          const modal = document.getElementById('successModal');
          document.getElementById('successMessage').innerText = result.message || 'Password updated successfully!';
          modal.showModal();
          e.target.reset();
        } else {
          const modal = document.getElementById('errorModal');
          document.getElementById('errorMessage').innerText = result.message || 'Failed to update password.';
          modal.showModal();
        }
      } catch (err) {
        console.error('Error updating password:', err);
        const modal = document.getElementById('errorModal');
        document.getElementById('errorMessage').innerText = 'An error occurred. Please try again.';
        modal.showModal();
      }
    });

    function closeModal(modalId) {
      const modal = document.getElementById(modalId);
      if (modal) modal.close();
    }
  </script>
</body>
</html>